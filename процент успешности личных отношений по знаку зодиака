#include "stdafx.h"
#include<iostream>
using namespace std;
int main()
{
	setlocale(LC_ALL, "RUSSIAN");
	int a, b;
	cout << "Введите номер своего знака зодиака: " << endl;
	cout << "1 - Стрелец" << endl;
	cout << "2 - Овен" << endl;
	cout << "3 - Дева" << endl;
	cout << "4 - Лев" << endl;
	cin >> a;
	cout << "Введите номер знака зодиака партнера: " << endl;
	cout << "1 - Стрелец" << endl;
	cout << "2 - Овен" << endl;
	cout << "3 - Дева" << endl;
	cout << "4 - Лев" << endl;
	cin >> b;
	if ((a==1)&&(b==1))
	{
		cout << "100%" << endl;
	}
	else if ((a==1)&&(b==2))
	{
		cout << "0%" << endl;
	}
	else if ((a == 1) && (b == 3))
	{
		cout << "17%" << endl;
	}
	else if ((a == 1) && (b == 4))
	{
		cout << "2%" << endl;
	}
	else if ((a == 2) && (b == 2))
	{
		cout << "0%" << endl;
	}
	else if ((a == 2) && (b == 3))
	{
		cout << "100%" << endl;
	}
	else if ((a == 2) && (b == 4))
	{
		cout << "10%" << endl;
	}
	else if ((a == 2) && (b == 1))
	{
		cout << "2%" << endl;
	}
	else if ((a == 3) && (b == 1))
	{
		cout << "5%" << endl;
	}
	else if ((a == 3) && (b == 2))
	{
		cout << "55%" << endl;
	}
	else if ((a == 3) && (b == 3))
	{
		cout << "50%" << endl;
	}
	else if ((a == 3) && (b == 4))
	{
		cout << "54%" << endl;
	}
	else if ((a == 4) && (b == 1))
	{
		cout << "4%" << endl;
	}
	else if ((a == 4) && (b == 2))
	{
		cout << "44%" << endl;
	}
	else if ((a == 4) && (b == 3))
	{
		cout << "45%" << endl;
	}
	else if ((a == 4) && (b == 4))
	{
		cout << "47%" << endl;
	}
	system("pause"); 
    return 0;
}
